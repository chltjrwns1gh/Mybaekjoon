n = int(input())
for i in range(n):
    if i == 0:
        for k in range(n-1):
            print(" ",end = '')
        print("*",end = '')
        print()
        continue
    for k in range(n-i-1):
        print(" ",end = '')
    print("*",end = '')
    for k in range(2*i-1):
        print(" ",end = '')
    print("*")

