n = int(input())
for i in range(n-1):
    if i == 0:
        for k in range(n-1):
            print(" ",end = '')
        print("*")
        continue
    for k in range(n-i-1):
        print(" ",end = '')
    print("*",end = '')
    for k in range(2*i-1):
        print(" ",end = '')
    print("*")
for i in range(2*n-1):
    print("*",end = '')
