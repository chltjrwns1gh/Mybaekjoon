n = int(input())
for i in range(2*n):
    if i%2 == 0:
        for k in range(n):
            if k%2 == 0:
                print("*",end = '')
            else:
                print(" ",end = '')
        print()
    else:
        for k in range(n):
            if k%2 == 0:
                print(" ",end = '')
            else:
                print("*",end = '')
        print()
