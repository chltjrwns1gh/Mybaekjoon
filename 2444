a = int(input())
for i in range(a):
    for k in range(a-i-1):
        print(" ",end = '')
    for k in range(2*i+1):
        print("*",end = '')
    print()
for i in range(1,a):
    for k in range(i):
        print(' ',end = '')
    for k in range(2*(a-i)-1):
        print("*",end = '')
    print()
