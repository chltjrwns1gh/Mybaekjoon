arr = list()
for i in range(8):
    arr.append(int(input()))
print(sorted(arr)[-1]+sorted(arr)[-2]+sorted(arr)[-3]+sorted(arr)[-4]+sorted(arr)[-5])
arr_index_point = list()
for i in range(1, 6):
    arr_index_point.append(arr.index(sorted(arr)[-i]))
arr_index_point.sort()
for i in arr_index_point:
    print(i+1, end=' ')
